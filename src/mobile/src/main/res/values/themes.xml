<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OpenVPNClient" parent="Theme.OpenVPNClient.Base">
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
    </style>

    <style name="Widget.OpenVPNClient.ServerSelectionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/server_selection_stroke_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="android:stateListAnimator">?attr/ovpnFocusableStateListAnimator</item>
        <item name="android:defaultFocusHighlightEnabled">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WidgetOpenVPNClientFocusableSurface">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:stateListAnimator">?attr/ovpnFocusableStateListAnimator</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Make About screen chevrons match link color -->
    <style name="Widget.OpenVPNClient.ClickableRow" parent="WidgetOpenVPNClientFocusableSurface">
        <item name="android:textAppearance">@style/TextAppearance.OpenVPNClient.Body</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="drawableTint">@color/text_color_primary</item>
        <item name="android:drawableTint">@color/text_color_primary</item>
    </style>

</resources>
