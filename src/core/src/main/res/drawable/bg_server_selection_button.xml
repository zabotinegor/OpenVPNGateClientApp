<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@color/server_selection_bg_pressed" />
            <stroke
                android:width="2dp"
                android:color="@color/server_selection_border_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@color/server_selection_bg_focus" />
            <stroke
                android:width="2dp"
                android:color="@color/server_selection_border_focus" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@color/server_selection_bg_default" />
            <stroke
                android:width="1dp"
                android:color="@color/server_selection_border_default" />
        </shape>
    </item>
</selector>
