<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Language -->
        <LinearLayout
            android:id="@+id/language_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/language_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/section_language_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_language_title"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Title" />

                    <TextView
                        android:id="@+id/language_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/language_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:rotation="90"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    android:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/language_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/language_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_language_system"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                <RadioButton
                    android:id="@+id/language_en"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_language_english"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                <RadioButton
                    android:id="@+id/language_ru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_language_russian"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                <RadioButton
                    android:id="@+id/language_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_language_polish"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />
            </RadioGroup>
        </LinearLayout>

        <!-- Theme -->
        <LinearLayout
            android:id="@+id/theme_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/theme_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/section_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_theme_title"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Title" />

                    <TextView
                        android:id="@+id/theme_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/theme_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:rotation="90"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    android:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/theme_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/theme_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_theme_system"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                <RadioButton
                    android:id="@+id/theme_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_theme_light"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                <RadioButton
                    android:id="@+id/theme_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_theme_dark"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />
            </RadioGroup>
        </LinearLayout>

        <!-- Server source -->
        <LinearLayout
            android:id="@+id/server_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/server_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/section_server_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_server_title"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Title" />

                    <TextView
                        android:id="@+id/section_server_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_server_subtitle"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle" />

                    <TextView
                        android:id="@+id/server_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/server_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:rotation="90"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    android:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/server_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="4dp">

                <RadioGroup
                    android:id="@+id/server_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/server_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:buttonTint="?attr/colorPrimary"
                        android:text="@string/settings_server_default"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                    <RadioButton
                        android:id="@+id/server_vpngate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="?attr/colorPrimary"
                        android:text="@string/settings_server_vpngate"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                    <RadioButton
                        android:id="@+id/server_custom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="?attr/colorPrimary"
                        android:text="@string/settings_server_custom"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/custom_server_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/custom_server_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/settings_server_custom_hint"
                        android:inputType="textUri"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Auto switch within country -->
        <LinearLayout
            android:id="@+id/auto_switch_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/auto_switch_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/auto_switch_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_auto_switch_title"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Title" />

                    <TextView
                        android:id="@+id/auto_switch_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_auto_switch_subtitle"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle" />

                    <TextView
                        android:id="@+id/auto_switch_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/auto_switch_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:rotation="90"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    android:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/auto_switch_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/auto_switch_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_auto_switch_on"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />

                <RadioButton
                    android:id="@+id/auto_switch_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="@string/settings_auto_switch_off"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />
            </RadioGroup>
        </LinearLayout>

        <!-- Cache TTL -->
        <LinearLayout
            android:id="@+id/cache_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/cache_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/section_cache_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_cache_title"
                        android:textAppearance="@style/TextAppearance.OpenVPNClient.Title" />

                    <TextView
                        android:id="@+id/cache_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle"
                    android:ellipsize="end"
                    android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/cache_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:rotation="90"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    android:tint="?attr/colorOnSurface" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cache_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cache_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/settings_cache_hint"
                    android:textAppearance="@style/TextAppearance.OpenVPNClient.Body" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
