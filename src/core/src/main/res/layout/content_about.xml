<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/about_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/section_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_section_app"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Title"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Body"
            android:paddingBottom="4dp"
            tools:text="Version: 1.0 (1)" />

        <TextView
            android:id="@+id/tv_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Body"
            android:paddingBottom="12dp"
            tools:text="Package: com.example.app" />

        <TextView
            android:id="@+id/tv_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Body"
            android:paddingBottom="16dp"
            tools:text="VPN Engine: OpenVPN for Android" />

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Subtitle"
            android:paddingBottom="16dp"
            tools:text="Â© 2025 Your Name" />

        <TextView
            android:id="@+id/section_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_section_links"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Title"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/row_website"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_website"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_email"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_email"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_telegram"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_telegram"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_github"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_github"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_github_engine"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_github_engine"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_play"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_google_play"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/section_legal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_section_legal"
            android:textAppearance="@style/TextAppearance.OpenVPNClient.Title"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/row_privacy"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_privacy_policy"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_terms"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_terms_of_use"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_license"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_licenses"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/row_ics_github"
            style="@style/Widget.OpenVPNClient.ClickableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_ics_github"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_24" />

    </LinearLayout>

</ScrollView>

