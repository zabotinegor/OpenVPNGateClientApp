<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the fragment that displays the main connection details, including the speedometer view. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yahorzabotsin.openvpnclient.core.ui.SpeedometerView
        android:id="@+id/speedometer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:arcColor="?attr/ovpnSpeedometerArcColor"
        app:progressColor="?attr/ovpnSpeedometerProgressColor"
        app:speedTextColor="?attr/ovpnSpeedometerTextColor"
        app:subtitleTextColor="?attr/ovpnSpeedometerTextColor"
        app:arcWidth="@dimen/speedometer_arc_width"
        app:speedTextSize="@dimen/speedometer_speed_text_size"
        app:subtitleTextSize="@dimen/speedometer_subtitle_text_size" />

</androidx.constraintlayout.widget.ConstraintLayout>
