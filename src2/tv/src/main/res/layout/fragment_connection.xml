<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yahorzabotsin.openvpnclient.core.ui.SpeedometerView
        android:id="@+id/speedometer"
        android:layout_width="@dimen/speedometer_width"
        android:layout_height="@dimen/speedometer_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:arcColor="@color/speedometer_arc_color"
        app:progressColor="@color/speedometer_progress_color"
        app:speedTextColor="@color/speedometer_text_color"
        app:subtitleTextColor="@color/speedometer_text_color"
        app:arcWidth="@dimen/speedometer_arc_width"
        app:speedTextSize="@dimen/speedometer_speed_text_size"
        app:subtitleTextSize="@dimen/speedometer_subtitle_text_size" />

</androidx.constraintlayout.widget.ConstraintLayout>